<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity1_level2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/quiz_bgm2"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        tools:context=".QuestionActivity1">


        <TextView
            android:id="@+id/DispName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/10"
            android:textAlignment="center"
            android:textColor="#ADD8E6"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/answerGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/DispName"
            android:layout_alignRight="@+id/DispName"
            android:layout_centerVertical="true">

            <RadioButton
                android:id="@+id/redioBtnA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:checked="false"
                android:text="A"
                android:textColor="#FFF" />

            <RadioButton
                android:id="@+id/redioBtnB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:checked="false"
                android:text="B"
                android:textColor="#FFF" />

            <RadioButton
                android:id="@+id/redioBtnC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:checked="false"
                android:text="C"
                android:textColor="#FFF" />

            <RadioButton
                android:id="@+id/redioBtnD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25sp"
                android:checked="false"
                android:text="D"
                android:textColor="#FFF" />

        </RadioGroup>

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/answerGroup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="27dp"
            android:background="@drawable/optiondesign"
            android:text="NEXT"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonquit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/buttonNext"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20sp"
            android:background="@drawable/optiondesign"
            android:text="QUIT"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/answerGroup"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="35sp"
            android:layout_marginBottom="52dp"
            android:text="Questions"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="24sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:text="Your Score :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="0"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="19sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>